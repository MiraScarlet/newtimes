<!DOCTYPE html>
<html>
<head>
  <title>GumbySlwps</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag :modernizr %>

  <%= csrf_meta_tags %>
</head>
<body>




<div class="navbar" id="nav1" style="background-color: #428bca">
  <!-- Toggle for mobile navigation, targeting the <ul> -->

    <a class="toggle" gumby-trigger="#nav1 > .row > ul" href="#"><i class="icon-menu"></i></a>
    <h1 class="four columns logo">
      <a href="#" style="margin-top: -15px">
        <%= image_tag "/assets/newtimes_logo.png"%>
      </a>
    </h1>
    <ul class="eight columns" >
      <li><a href="/home"><i class="icon-home"></i> Home</a></li>
      <li><a href="/job_seekers"><i class="icon-search"></i> Job Seekers</a></li>
      <li><a href="/employers"><i class="icon-flag"></i> Employers</a></li>
      <li><a href="/about_us"><i class="icon-droplet"></i> About Us</a></li>
      <li><a href="/contact_us"><i class="icon-phone"></i> Contact Us</a></li>
      <% if current_user %>
          <li>
            <a><%= current_user.email %> <i class="icon-down-circled"></i></a>
            <div class="dropdown">
              <ul>
                <li style="color: white"><a><i class="icon-user"></i> <%= current_user.email %></a></li>
                <li>

                    <%= link_to logout_path do %>
                        <i class="icon-logout"></i>
                        Log Out
                    <% end %>

                </li>

              </ul>
            </div>
          </li>
      <% else %>
          <li>
            <%= link_to signup_path do %>
                <i class="icon-user-add"></i>
                Sign Up
            <% end %>
          </li>
          <li>
            <%= link_to login_path do %>
                <i class="icon-login"></i>
                Log In
            <% end %>
            </li>
      <% end %>

    </ul>
</div>
	

	
<%= yield %>
