    <a class="toggle" gumby-trigger="#nav3 &gt; .row &gt; ul" href="#"><i class="icon-menu"></i></a>
    <ul>
      <li style="margin-top: -20px">
        <a href="#" style="color:#3276b1; line-height: 25px;  text-shadow:none ">
          Connect With Us
          <br>
          Call Us
          <i class="icon-phone"></i>
          1-800-CUP-CAKE
        </a>
      </li>

      <li style="">
        <a href="#" style="color:#3276b1; line-height: 25px;  text-shadow:none ">
          <i class="icon-mail"></i>
          Email Us
          <br>
          info@newtimes.ca
        </a>

      </li>
      <li style="">
        <a href="#" style="color:#3276b1; line-height: 25px;  text-shadow:none ">
          Â© Newtimes Inc
          <br>
          All Rights Reserved
        </a>

      </li>
      <li>
        <a href="#" style="color:#3276b1;">
          <i class="icon-facebook-squared" style="font-size:30px;color:#428bca;"></i>
        </a>
      </li>
      <li>
        <a href="#" style="color:#3276b1;">
          <i class="icon-twitter" style="font-size:30px; color:red"></i>
        </a>
      </li>

    </ul>
  </div>
</div>
</body>
</html>
